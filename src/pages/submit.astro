---
import Layout from '../layouts/Layout.astro';
import VideoSubmit from '../components/VideoSubmit';
---

<Layout title="ChumbaVision - Submit Video">
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-b from-black to-gray-900 px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-2xl md:text-3xl font-bold text-white mb-2">Submit a Video</h1>
        <p class="text-gray-400 text-sm md:text-base">Share your favorite TikTok or Instagram Reels</p>
      </div>
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-4 md:p-6 shadow-xl">
        <VideoSubmit client:load />
      </div>
    </div>
  </div>
</Layout> 